<%- include('../partials/head') %>
<body>
    <header>
        <nav class="navbar is-info" role="navigation" aria-label="main navigation">
            <div class="navbar-brand">
                <a class="navbar-item" href="/">
                    <figure class="image is-52x52">
                        <img src="/images/logo-transparent.png" height="52px" width="52px" alt="CSC 471 Logo" />
                    </figure>
                </a>

                <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                    data-target="navbarBasic">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>

            <div id="navbarBasic" class="navbar-menu">
                <div class="navbar-end">
                    <a class="navbar-item">
                        Home
                    </a>

                    <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link">
                            Tables
                        </a>

                        <div class="navbar-dropdown is-right">
                            <a class="navbar-item is-selected" href="/employee/all">
                                Employee
                            </a>
                            <a class="navbar-item">
                                Department
                            </a>
                            <a class="navbar-item">
                                Projects
                            </a>
                        </div>
                    </div>

                </div>

            </div>
        </nav>
    </header>
    <main>

        <section class="section">

            <div>
                <form action="/employee/searching" method="post">
                    <div class="field has-addons">
                        <div class="control is-expanded">
                            <input class="input" type="text" placeholder="Find an employee" name="search">
                        </div>
                        <div class="control">
                            <button class="button is-info">
                                Search
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <h1 class="title">Employee Info</h1>
            <div class="table-container">
                <table class="table is-bordered is-striped is-fullwidth">
                    <thead>
                        <tr class="is-info">
                            <th class="has-text-dark">EmpSSN</th>
                            <th class="has-text-dark">DOB</th>
                            <th class="has-text-dark">First Name</th>
                            <th class="has-text-dark">Middle init</th>
                            <th class="has-text-dark">Last Name</th>
                            <th class="has-text-dark">Address</th>
                            <th class="has-text-dark">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (typeof employees !== 'undefined' && employees.length > 0) { %>
                            <% employees.forEach(function(employee) { %>
                                <tr>
                                    <td><%= employee.EmpSSN %></td>
                                    <td><%= employee.DOB %></td>
                                    <td><%= employee.FName %></td>
                                    <td><%= employee.Mint %></td>
                                    <td><%= employee.LName %></td>
                                    <td><%= employee.Address %></td>
                                    <td>
                                        <div class="field is-grouped">
                                            <div class="control">
                                                <a href="/employee/employeeInfo/<%= employee.EmpSSN %>" class="button is-info">View</a>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="6">No employee found</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="field is-grouped">
                <% if (typeof employee !== 'undefined') { %>
                    <div class="control">
                        <a href="/employee/update/<%= employee.EmpSSN %>" class="button is-link">Edit</a>
                    </div>
                    <div class="control">
                        <a href="/employee/delete/<%= employee.EmpSSN %>" class="button is-danger">Delete</a>
                    </div>
                <% } else { %>
                    <div class="control">
                        <a href="/employee/all" class="button is-link">Back</a>
                    </div>
                <% } %>
            </div>

        </section>


    </main>
    <footer class="footer">
        <div class="content has-text-centered">
            <p>
                <strong>CSC 471 Project: Part 5</strong> by <a href="https://github.com/JM-2001/">Jonathan</a>.
                The source code can be found on this
                <a href="https://github.com/JM-2001/SQL-Web-app">github page</a>.
            </p>
        </div>
    </footer>
</body>

</html>