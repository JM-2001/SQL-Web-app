<%- include('../partials/head') %>
<body>
    <header>
        <nav class="navbar is-info" role="navigation" aria-label="main navigation">
            <div class="navbar-brand">
                <a class="navbar-item" href="/">
                    <figure class="image is-52x52">
                        <img src="/images/logo-transparent.png" height="52px" width="52px" alt="CSC 471 Logo" />
                    </figure>
                </a>

                <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                    data-target="navbarBasic">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>

            <div id="navbarBasic" class="navbar-menu">
                <div class="navbar-end">
                    <a class="navbar-item">
                        Home
                    </a>

                    <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link">
                            Tables
                        </a>

                        <div class="navbar-dropdown is-right">
                            <a class="navbar-item is-selected" href="/employee/all">
                                Employee
                            </a>
                            <a class="navbar-item">
                                Department
                            </a>
                            <a class="navbar-item">
                                Projects
                            </a>
                        </div>
                    </div>

                </div>

            </div>
        </nav>
    </header>
    <main>
        
        <section class="section">
            <h1 class="title">Add Dependent</h1>

            <form action="/employee/dependents/new" method="POST">
                
                <div class="field">
                    <label class="label">EmpSSN:</label>
                    <div class="control">
                        <div class="select">
                            <select name="empSSN">
                                <% employees.forEach(function(employee) { %>
                                    <option value="<%= employee.EmpSSN %>" <%= empSSN == employee.EmpSSN ? 'selected' : '' %>><%= employee.EmpSSN %></option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                </div>
            
                <div class="field">
                    <label class="label">Name:</label>
                    <div class="control">
                        <input class="input" type="text" placeholder="Enter name" name="dependentName" value="">
                    </div>
                </div>
            
                <div class="field">
                    <label class="label">Relationship:</label>
                    <div class="control">
                        <input class="input" type="text" placeholder="Enter relationship" name="dependentRelationship" value="">
                    </div>
                </div>
            
                <div class="field is-grouped">
                    <div class="control">
                        <button class="button is-link">Submit</button>
                    </div>
                    <div class="control">
                        <button class="button is-link is-light" type="button" onclick="window.location.href='/employee/all'">Cancel</button>
                    </div>
                </div>
            </form>

        </section>

    </main>
    <footer class="footer">
        <div class="content has-text-centered">
            <p>
                <strong>CSC 471 Project: Part 5</strong> by <a href="https://github.com/JM-2001/">Jonathan</a>.
                The source code can be found on this
                <a href="https://github.com/JM-2001/SQL-Web-app">github page</a>.
            </p>
        </div>
    </footer>
</body>

</html>