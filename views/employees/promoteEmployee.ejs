    </header>
    <main>
        
        <script>
            document.addEventListener('DOMContentLoaded', () => {
    // Get the form and the payroll type select element
    const form = document.querySelector('form');
    const payrollTypeSelect = document.querySelector('select[name="payroll-type"]');

    // Add an event listener for the change event
    payrollTypeSelect.addEventListener('change', (event) => {
        // Update the form action based on the selected option
        if (event.target.value === 'Hourly Employee') {
            console.log('Hourly Employee: /employee/promoting-hourly');
            form.action = '/employee/promoting-hourly';
        } else if (event.target.value === 'Salaried Employee') {
            console.log('Salaried Employee: /employee/promoting-salaried');
            form.action = '/employee/promoting-salaried';
        }
    });
});
        </script>

        <section class="section">
            <h1 class="title">Promote Employee to Payroll</h1>

            <form action="/employee/promoting-hourly" method="POST" id="promoting-employee-form">

                <div class="field">
                    <label class="label">EmpSSN:</label>
                    <div class="control">
                        <div class="select">
                            <select name="empSSN">
                                <% employees.forEach(function(employee) { %>
                                    <option value="<%= employee.EmpSSN %>" <%= empSSN == employee.EmpSSN ? 'selected' : '' %>><%= employee.EmpSSN %></option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="field">
                    <label class="label">Payroll Type:</label>
                    <div class="control">
                        <div class="select">
                            <select name="payroll-type">
                                <option>Hourly Employee</option>
                                <option>Salaried Employee</option>
                            </select>
                        </div>
                    </div>
                </div>
            
                <div class="field">
                    <label class="label">Payroll Rate:</label>
                    <div class="control">
                        <input class="input" type="number" name="payrollrate" step="0.01" min="7.50" value="">
                    </div>
                </div>
            
                <div class="field is-grouped">
                    <div class="control">
                        <button class="button is-link">Submit</button>
                    </div>
                    <div class="control">
                        <button class="button is-link is-light" type="button" onclick="window.location.href='/employee/all'">Cancel</button>
                    </div>
                </div>
            </form>

        </section>
        

       

